{
  "name": "spotr-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/spotr",
    "site"
  ],
  "scripts": {
    "build": "bun run --filter spotr build",
    "test": "bun run --filter spotr test",
    "test:watch": "bun run --filter spotr test:watch",
    "typecheck": "bun run --filter spotr typecheck",
    "lint": "eslint packages/spotr/src packages/spotr/test examples/shared examples/*/*/src",
    "examples:typecheck": "bun run scripts/typecheck-examples.ts",
    "examples:sync": "bun run scripts/sync-examples.ts",
    "examples:install": "bun run scripts/install-examples.ts",
    "examples:update": "bun run scripts/update-examples.ts",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "packageManager": "bun@1.1.38"
}
