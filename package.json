{
  "name": "spotr-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/spotr",
    "site"
  ],
  "scripts": {
    "build": "bun run --filter spotr build",
    "test": "bun run --filter spotr test",
    "test:watch": "bun run --filter spotr test:watch",
    "test:coverage": "bun run --filter spotr test:coverage",
    "test:coverage:watch": "bun run --filter spotr test:coverage:watch",
    "typecheck": "bun run --filter spotr typecheck",
    "audit": "bun run scripts/audit-spotr.ts",
    "lint": "eslint packages/spotr/src packages/spotr/test examples/shared examples/*/*/src",
    "examples:typecheck": "bun run scripts/typecheck-examples.ts",
    "examples:sync": "bun run scripts/sync-examples.ts",
    "examples:install": "bun run scripts/install-examples.ts",
    "examples:update": "bun run scripts/update-examples.ts",
    "examples:audit": "bun run scripts/audit-examples.ts",
    "examples:dev": "bun run scripts/dev-examples.ts",
    "release": "bun run scripts/release.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "bun run format:check && bun run lint && bun run typecheck && bun run test:coverage && bun run examples:typecheck && bun run build",
    "size:check": "bun run build && bun run scripts/check-bundle-size.ts",
    "bench": "bun run --filter spotr bench",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "packageManager": "bun@1.1.38"
}
