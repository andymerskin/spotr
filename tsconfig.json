{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "packages/**/*",
    "examples/**/*",
    "scripts/**/*",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules"
  ]
}
