---
import { examples } from '../data/examples';

interface Props {
  currentExample: string;
}

const { currentExample } = Astro.props;
---

<nav class="fixed w-60 h-screen p-4 border-r border-neutral-700 bg-neutral-900 overflow-y-auto z-10 flex flex-col">
  <div class="flex items-center gap-3 mb-6">
    <img src={`${import.meta.env.BASE_URL}spotr.svg`} alt="Spotr" class="w-10 h-10" />
    <h1 class="text-xl font-bold text-neutral-100">Spotr</h1>
  </div>
  <h2 class="text-lg font-semibold mb-4 text-neutral-100">Examples</h2>
  <ul class="space-y-2">
    {examples.map((ex) => (
      <li>
        <a
          href={`${import.meta.env.BASE_URL}${ex.slug}`}
          class:list={[
            'block text-left w-full py-1 px-3 rounded text-neutral-400 hover:text-neutral-100 hover:bg-cyan-900',
            currentExample === ex.slug && 'font-bold bg-cyan-900 text-cyan-200!',
          ]}
        >
          {ex.title}
        </a>
      </li>
    ))}
  </ul>
  <div class="mt-auto pt-8 pb-4">
    <p class="text-xs text-neutral-500 text-center mt-1">
      Documentation built with Astro
    </p>
    <p class="text-xs text-neutral-500 text-center">
      Â© 2026 munchkin.dev
    </p>
  </div>
</nav>
