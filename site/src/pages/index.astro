---
import Layout from "../layouts/Layout.astro";
import LandingSearchDemo from "../components/LandingSearchDemo";
import peopleData from "../data/people.json";
import gamesData from "../data/games.json";
---

<Layout title="Spotr">
  <div
    class="min-h-screen bg-neutral-900 flex flex-col items-center py-12 px-4"
  >
    <div class="w-full max-w-6xl flex flex-col items-center">
      {/* Logo */}
      <div class="flex items-center gap-3">
        <img
          src={`${import.meta.env.BASE_URL}spotr.svg`}
          alt="Spotr"
          class="w-24 h-24"
        />
        <span class="text-3xl font-bold text-neutral-100">Spotr</span>
      </div>

      {/* Description */}
      <h1 class="mt-8 text-2xl font-bold text-neutral-100 text-center">
        A powerful and minimal client-side fuzzy search library
      </h1>

      {/* Buttons */}
      <div class="mt-6 flex gap-4">
        <a
          href={`${import.meta.env.BASE_URL}examples`}
          class="px-6 py-3 bg-cyan-600 text-white font-medium rounded-lg hover:bg-cyan-700 transition-colors"
        >
          Examples
        </a>
        <a
          href="https://github.com/andymerskin/spotr"
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 bg-neutral-800 text-neutral-200 font-medium rounded-lg border border-neutral-700 hover:bg-neutral-700 transition-colors"
        >
          GitHub
        </a>
      </div>

      {/* Try it out headline */}
      <h2 class="mt-12 text-xl font-bold text-neutral-100">Try it out!</h2>

      {/* Interactive Demo */}
      <div class="mt-4 w-full">
        <LandingSearchDemo client:load people={peopleData} games={gamesData} />
      </div>
    </div>

    {/* Footer */}
    <footer class="w-full mt-12 py-6 border-t border-neutral-800">
      <div class="w-full max-w-6xl mx-auto px-4 text-center space-y-3">
        <h2 class="font-jersey text-4xl text-emerald-500">munchkin.dev</h2>
        <p class="text-sm text-neutral-400">
          <a
            href={`${import.meta.env.BASE_URL}examples`}
            class="hover:text-cyan-400 transition-colors"
          >
            Examples
          </a>
          <span class="mx-1 text-neutral-600">•</span>
          <a
            href="https://github.com/andymerskin/spotr"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-cyan-400 transition-colors"
          >
            GitHub
          </a>
        </p>
        <p class="text-sm text-neutral-400">
          © 2026 munchkin.dev. Built with <a
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="text-cyan-500 hover:text-cyan-400 transition-colors">Astro</a
          >
        </p>
      </div>
    </footer>
  </div>
</Layout>
