---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  example?: string;
}

const { title, description } = Astro.props;
const defaultDescription =
  'A powerful fuzzy search library for client-side collections in TypeScript.';
const pageDescription = description ?? defaultDescription;

// Format page title based on page type
const isLandingPage =
  Astro.url.pathname === '/' || Astro.url.pathname === import.meta.env.BASE_URL;
const formattedTitle = isLandingPage
  ? `Spotr - ${defaultDescription}`
  : `${title} | Spotr`;

// Construct full URLs for Open Graph
const siteUrl = 'https://andymerskin.github.io';
const baseUrl = import.meta.env.BASE_URL;
const ogImageUrl = `${siteUrl}${baseUrl}open-graph/spotr.png`;
const canonicalUrl = `${siteUrl}${Astro.url.pathname}`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}spotr.svg`}
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{formattedTitle}</title>

    {/* SEO Meta Tags */}
    <meta name="description" content={pageDescription} />
    <meta name="author" content="Andy Merskin" />

    {/* Open Graph Meta Tags */}
    <meta property="og:title" content={formattedTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />

    {/* Twitter Card Meta Tags */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={formattedTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    {/* Structured Data */}
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: 'Andy Merskin',
      })}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
