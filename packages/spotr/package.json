{
  "name": "spotr",
  "version": "1.0.0-alpha.0",
  "description": "A powerful and minimal client-side fuzzy search library",
  "author": "Andy Merskin <andymerskin@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/andymerskin/spotr",
  "bugs": "https://github.com/andymerskin/spotr/issues",
  "homepage": "https://andymerskin.github.io/spotr",
  "keywords": [
    "search",
    "fuzzy",
    "client-side",
    "levenshtein",
    "filter"
  ],
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "import": "./dist/vue.js",
      "require": "./dist/vue.cjs"
    },
    "./svelte": {
      "types": "./dist/svelte.d.ts",
      "import": "./dist/svelte.js",
      "require": "./dist/svelte.cjs"
    },
    "./solid": {
      "types": "./dist/solid.d.ts",
      "import": "./dist/solid.js",
      "require": "./dist/solid.cjs"
    },
    "./preact": {
      "types": "./dist/preact.d.ts",
      "import": "./dist/preact.js",
      "require": "./dist/preact.cjs"
    }
  },
  "scripts": {
    "prepack": "bun run build",
    "prepublishOnly": "cd ../.. && bun run format:check && bun run lint && bun run typecheck && bun run test:coverage && bun run examples:typecheck",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "bench": "vitest bench --run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18",
    "vue": ">=3",
    "svelte": ">=4",
    "solid-js": ">=1",
    "preact": ">=10"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "solid-js": {
      "optional": true
    },
    "preact": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@preact/preset-vite": "^2.10.0",
    "@testing-library/preact": "^3.2.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/vue": "^8.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "ajv": "^8.18.0",
    "eslint": "^10.0.0",
    "happy-dom": "^20.6.3",
    "preact": "^10.28.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "solid-js": "^1.9.11",
    "svelte": "^5.53.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.28"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
